                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.Mypic1, new { htmlAttributes = new { @class = "form-control" }, type = "file" })
                            @Html.ValidationMessageFor(model => model.Image_g, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.ID_img_g, "รูปบัตรประชาชน", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.Mypic2, new { htmlAttributes = new { @class = "form-control" }, type = "file" })
