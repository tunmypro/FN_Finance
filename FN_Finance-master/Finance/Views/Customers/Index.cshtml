@model IEnumerable<Finance.Models.Customers>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-bordered" id="example" style="width: 100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID_Card_m)
            </th>
            <th>
                ชื่อ-นามสกุล
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Career_m)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salary_m)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StatusCustomer.StatusType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ID_Card_m)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.title.titlename) @Html.DisplayFor(modelItem => item.Name_m) @Html.DisplayFor(modelItem => item.Lname_m)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Career_m)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Salary_m)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StatusCustomer.StatusType)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID_Card_m }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ID_Card_m })
                </td>
            </tr>
        }
    </tbody>
</table>
<link href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css" rel="stylesheet" />


@section scripts{
    <script src="https://code.jquery.com/jquery-3.3.1.js"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready( function () {
            $('#example').DataTable();
        } );
    </script>
}