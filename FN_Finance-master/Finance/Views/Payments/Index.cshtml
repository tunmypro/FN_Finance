@model IEnumerable<Finance.Models.Payments>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<table class="table table-striped table-bordered" id="example" style="width: 100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PaymentDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Payment_Money)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contracts.ID_Card_m)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customers.Name_m)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NameUser)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PaymentDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Payment_Money)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contracts.ID_Card_m)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Customers.Name_m)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NameUser)
                </td>
            </tr>
        }
    </tbody>
</table>

@if (ViewBag.Change != null)
{
    <script type="text/javascript">
        window.onload = function () {
            alert("เงินทอน = "+"@ViewBag.Change");
        };
    </script>
}

<link href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css" rel="stylesheet" />


@section scripts{
    <script src="https://code.jquery.com/jquery-3.3.1.js"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready( function () {
            $('#example').DataTable();
        } );
        </script>
    }
