@{if (Session["Pass"] == null)
    {
        <script>

                window.location.href = "@Url.Action("Index", "Login")"
        </script>
    }
    else
    {
        <script>
                setTimeout(function () { window.location.href = "@Url.Action("Logout", "Login")"; }, 300000);
        </script>
    }

}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Finance_TmP_Co.,Ltd.</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
