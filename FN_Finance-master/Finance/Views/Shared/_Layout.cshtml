            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("ชำระเงิน", "Index", "Searching")</li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            เพิ่มข้อมูล
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href='@Url.Action("Create", "Customers")'>เพิ่มบุคคล</a></li>
                            <li><a href='@Url.Action("Create", "Licenses")'>เพิ่มทะเบียน</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
